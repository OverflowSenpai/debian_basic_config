#!/bin/bash

#========================
#====== Functions =======
#========================
paket_installation () {
  apt install apt-transport-https -y > /var/log/script_stdout.log 2> /var/log/script_error.log &> dev/null
  apt install ca-certificates -y > /var/log/script_stdout.log 2> /var/log/script_error.log &> dev/null
  apt install curl -y > /var/log/script_stdout.log 2> /var/log/script_error.log &> dev/null
  apt install htop -y > /var/log/script_stdout.log 2> /var/log/script_error.log &> dev/null
  apt install net-tools -y > /var/log/script_stdout.log 2> /var/log/script_error.log &> dev/null
  apt install open-ssh-server -y > /var/log/script_stdout.log 2> /var/log/script_error.log &> dev/null
}

ssh_server_config () {
    printf "Which port do you want to use? [1025-65535]: "
    read INT_SSHPORT

    while [ $INT_SSHPORT -gt 65535 ] || [ $INT_SSHPORT -lt 1025 ]; do
      printf "Port not in Range [1025-65535]!\n"
      printf "Which port do you want to use? [1025-65535]: "
      read INT_SSHPORT
    done

    if [ $INT_SSHPORT -ge 1025 ] && [ $INT_SSHPORT -le 65535 ]; then
      printf "Setting up SSH-Server ..."
      echo -e "\n\n#=======================\n#Custom Config\n#=======================\n" >> /etc/ssh/sshd_config
      echo "Port $INT_SSHPORT" >> /etc/ssh/sshd_config
      echo "LoginGracetime 30" >> /etc/ssh/sshd_config
      echo "PermitRootLogin no" >> /etc/ssh/sshd_config
      echo "StrictModes yes" >> /etc/ssh/sshd_config
      echo "MaxAuthTries 3" >> /etc/ssh/sshd_config
      echo "MaxSessions 3" >> /etc/ssh/sshd_config
    fi
}

bashrc_root () {
  rm -f ~/.bashrc
  touch ~/.bashrc
  echo -e "#=====================\n#Custom .bashrc Config\n#=====================\n" >> ~/.bashrc
  echo "force_color_prompt=yes" >> ~/.bashrc
  echo "HISTCONTROL=ignoreboth" >> ~/.bashrc
  echo "HISTSIZE=500" >> ~/.bashrc
  echo "HISTFILESIZE=1000" >> ~/.bashrc
  echo "shopt -s histappend histreedit histverify" >> ~/.bashrc
  echo "shopt -s checkwinsize" >> ~/.bashrc
  echo "PS1='\[\033[01;31m\][\[\033[01;33m\]\t\[\033[01;31m\]]─[\[\033[01;31m\]\u\[\033[01;33m\]@\[\033[01;96m\]\h\[\033[01;31m\]]─[\[\033[0;32m\]\w\[\033[01;31m\]]\[\033[38;5;15m\]\n\[\033[01;31m\]\\$\[\033[01;33m\]: \[\033[0;255m\]'" >> ~/.bashrc
  echo "alias ls='ls -h --color=auto'" >> ~/.bashrc
  echo "alias grep='grep --color=auto'" >> ~/.bashrc
  echo "alias mkdir='mkdir -p'" >> ~/.bashrc
  echo "alias h='history'" >> ~/.bashrc
  echo "alias hc='history -c'" >> ~/.bashrc
  echo "alias ..='cd ..'" >> ~/.bashrc
}

bashrc_nonroot () {
  rm -f ~/.bashrc
  touch ~/.bashrc
  echo -e "#=====================\n#Custom .bashrc Config\n#=====================\n" >> ~/.bashrc
  echo "force_color_prompt=yes" >> ~/.bashrc
  echo "HISTCONTROL=ignoreboth" >> ~/.bashrc
  echo "HISTSIZE=500" >> ~/.bashrc
  echo "HISTFILESIZE=1000" >> ~/.bashrc
  echo "shopt -s histappend histreedit histverify" >> ~/.bashrc
  echo "shopt -s checkwinsize" >> ~/.bashrc
  echo "PS1='\[\033[01;31m\][\[\033[01;33m\]\t\[\033[01;31m\]]─[\[\033[0;92m\]\u\[\033[01;33m\]@\[\033[01;96m\]\h\[\033[01;31m\]]─[\[\033[0;32m\]\w\[\033[01;31m\]]\[\033[38;5;15m\]\n\[\033[01;31m\]\\$\[\033[01;33m\]: \[\033[0;255m\]'" >> ~/.bashrc
  echo "alias ls='ls -h --color=auto'" >> ~/.bashrc
  echo "alias grep='grep --color=auto'" >> ~/.bashrc
  echo "alias mkdir='mkdir -p'" >> ~/.bashrc
  echo "alias h='history'" >> ~/.bashrc
  echo "alias hc='history -c'" >> ~/.bashrc
  echo "alias ..='cd ..'" >> ~/.bashrc
}

#==================================================
#========== Debian default conf - Setup ===========
#==================================================

printf "Do you want to start? [y/n]: "
read CHAR_DESISSION

if [ $CHAR_DESISSION == "y" ]; then
  if [ "$(id -u)" -eq "0" ]; then
    printf "Modify .bashrc for root user ...\n"
    bashrc_root

    printf "Updating Repositories ...\n"
    apt update > /var/log/script_stdout.log 2> /var/log/script_error.log &> dev/null

    printf "Installing basic packets ...\n"
    paket_installation

    printf "Configuring SSH-Server ...\n"
    ssh_server_config

  else
    printf "Modify .bashrc for non-root user ...\n"
    bashrc_nonroot

  fi
  printf "DONE!\n"

else
  printf "OK! See you soon :)\n"

fi