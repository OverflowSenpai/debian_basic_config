#!/bin/bash

#Colors prompt for root and no-root users:
if [ "$(id -u)" -eq "0" ]; then
  echo "#" >> ~/.bashrc
  echo "PS1='\[\033[38;5;214m\][\t]\[$(tput sgr0)\]\[\033[38;5;196m\]\u\[$(tput sgr0)\]\[\033[38;5;214m\]@\[$(tput sgr0)\]\[\033[38;5;46m\]\h\[$(tput sgr0)\]\[\033[38;5;6m\][\w]\[$(tput sgr0)\]\[\033[38;5;15m\]\n\[$(tput sgr0)\]\[\033[38;5;196m\]\\$\[$(tput sgr0)\]\[\033[38;5;214m\]:\[$(tput sgr0)\]\[\033[38;5;15m\] \[$(tput sgr0)\]'" >> ~/.bashrc
else
  echo "#" >> ~/.bashrc
  echo "PS1='\[\033[38;5;214m\][\t]\[$(tput sgr0)\]\[\033[38;5;15m\]\u\[$(tput sgr0)\]\[\033[38;5;214m\]@\[$(tput sgr0)\]\[\033[38;5;46m\]\h\[$(tput sgr0)\]\[\033[38;5;6m\][\w]\[$(tput sgr0)\]\[\033[38;5;15m\]\n\\$\[$(tput sgr0)\]\[\033[38;5;214m\]:\[$(tput sgr0)\]\[\033[38;5;15m\] \[$(tput sgr0)\]'" >> ~/.bashrc
fi
